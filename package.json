{
  "name": "pipr",
  "version": "1.2.1",
  "private": false,
  "description": "A tiny function for piping the results of one function to the next.",
  "repository": "https://github.com/Renddslow/pipr",
  "license": "MIT",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.esm.js"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "wedgekit build -p",
    "prebuild": "rm -rf dist",
    "prepare": "yarn build",
    "test": "ava"
  },
  "files": [
    "dist/index.d.ts",
    "dist/index.esm.js",
    "dist/index.cjs"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": "@dmsi/prettier-config",
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--no-warnings",
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  },
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "@types/node": "^14.0.23",
    "@wedgekit/scripts": "^1.0.0",
    "ava": "^3.15.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^3.9.6"
  }
}
