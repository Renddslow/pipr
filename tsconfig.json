{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2018"
  },
  "paths": {
    "*": ["node_modules/*"]
  },
  "include": ["src/**/*!(test).ts"],
  "exclude": ["node_modules"]
}
